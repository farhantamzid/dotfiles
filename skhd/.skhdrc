alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east


alt - tab : (yabai -m display --focus next || yabai -m display --focus prev)

# Toggle Alacritty window between its space and the current space
ctrl - f : ~/.config/yabai/toggle_alacritty.sh

ctrl - s : ~/.config/yabai/toggle_safari.sh

ctrl - v : ~/.config/yabai/toggle_vscode.sh

# send window to display and follow focus
alt - right : ((yabai -m window --display next && yabai -m display --focus next) || (yabai -m window --display prev && yabai -m display --focus prev))